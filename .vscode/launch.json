{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python : file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {"PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"} // https://stackoverflow.com/questions/53653083/how-to-correctly-set-pythonpath-for-visual-studio-code
        }
    ]
}